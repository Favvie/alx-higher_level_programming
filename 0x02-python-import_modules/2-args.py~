#!/usr/bin/python3
from sys import argv
print(argv)
if len(argv) == 1:
    print("0 arguments.")
elif len(argv) == 2:
    print("1 argument:\n1:{}".format(argv[1]))
elif len(argv) > 2:
        print("{} arguments:".format(len(argv) - 1))
        for i in range(1, len(argv)):
            print("{}: {}".format(i, argv[i]))
